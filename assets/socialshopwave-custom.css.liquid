.ssw-wishlist-btn__wrapper .ssw-wishlist-btn {
  font-size: 20px;
  font-weight: 300;
  background: #00577f;
  color: #fff;
  border-color: #00577f;
  margin: 0 40px 20px 0;
  line-height: 25px;
  letter-spacing: 0.05em;
  height: 55px;
  font-family: Montserrat;
}
@media only screen and (min-width: 1020px) {
  .ssw-wishlist-btn__wrapper .ssw-wishlist-btn {
    width: 270px;
    float: left;
  } 
}

@media only screen and (min-width: 768px) {
  .ssw-social-login-widget {
    width: 380px;
  }
}

.ssw-controls input[type=checkbox] {
  -webkit-appearance: checkbox;
}

a.ssw-link-fave-menu.ssw-link-fave-menu-hide-count {
  padding-left: 10px;
  padding-right: 0;
}
.header-search ul li a.wish_text {
  padding: 0;
}

.ssw-link-fave-menu {
  font-size: 17px;
}

.ssw-reward-page-header:nth-child-ssw-reward-page-menu(2) {
  order: -1;
}